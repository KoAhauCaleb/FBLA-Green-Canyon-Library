<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.GCHS.greencanyonlibrary.BookInfoFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/coverViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@color/zxing_transparent" />

            <TextView
                android:id="@+id/titleViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coverViewInfo"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/authorViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleViewInfo"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/descriptionViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/checkOutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/authorViewInfo"
                android:layout_centerHorizontal="true"
                android:text="Check Out" />

        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
